#!/usr/bin/env bash

OS_PATH="$HOME""/Desktop/aos-2019-m0"

function aos_pico () {
    echo 'picocom -b 115200 /dev/ttyUSB0'
    picocom -b 115200 /dev/ttyUSB0
}

function aos_refresh () {
    echo 'ninja && ../reset.sh && nc -up 26719 192.168.168.2 26719'
    ninja && ../reset.sh && nc -up 26719 192.168.168.2 26719
}

# Interface for home computer (dell xps)
function aos_ifup () {
    echo 'sudo ifup enx180f76012290'
    sudo ifup enx180f76012290
}

# Interface for home computer (dell xps)
function aos_ifdown () {
    echo 'sudo ifdown enx180f76012290'
    sudo down enx180f76012290
}

arg="$1"
shift

if [ -z "$arg" ]; then
    echo "Where is my argv[0]?" >&2
    exit 1
fi

if [ "$arg" = "pico" ]; then
    aos_pico $@
elif [ "$arg" = "refresh" ]; then
    aos_refresh $@
elif [ "$arg" = "ifup" ]; then
    aos_ifup $@
elif [ "$arg" = "ifdown" ]; then
    aos_ifdown $@
elif [ "$arg" = "cd" ]; then
    aos_cd $@
else
    echo "Unknown option: \"$arg\"" >&2
    exit 1
fi

exit 0
